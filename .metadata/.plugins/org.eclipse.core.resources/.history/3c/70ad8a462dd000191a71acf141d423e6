#include "BibliotecaTp1.h"


int main(void)
{
	int mostrarMenu(int eleccionMenu,float numeroA,float numeroB)
	{
		int flagA=0;
		int flagB=0;

		printf("1. Ingresar 1er operando (A=x)\n"
